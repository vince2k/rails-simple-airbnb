<h1>All our flats (<%= @flats.count %>)</h1>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <%= image_tag flat.image_url, class: "card-img-top img-fixed" %>
        <div class="card-body d-flex flex-column">
          <div class="mb-2">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
          </div>

          <div class="mt-auto">
            <div class="d-flex">
              <div class="me-3">
                <i class="fa-solid fa-user-group"></i>
                <%= flat.number_of_guests %>
              </div>
              <div>
                <i class="fa-solid fa-euro-sign"></i>
                <%= flat.price_per_night %>
              </div>
            </div>
          </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat), class:"text-warning" %>
          <%= link_to "Remove", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Vous Ãªtes sure ? " }, class:"text-danger"  %>
        </div>
      </div>
    </div>
  <% end %>
</div>
